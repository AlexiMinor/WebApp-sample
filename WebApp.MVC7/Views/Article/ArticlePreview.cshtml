@model ArticleModel
@{
    Layout = null;
}

<div class="col-12 col-sm-12 col-lg-6">
    <h4>@Model.Title</h4>
    <div>@Html.Raw(Model.Description)</div>
    
    @if (@Model.Rate.HasValue)
    {
        <span>@Model.Rate</span>
    }
    <span>@Model.Date</span>
    <span><i>@Model.Source</i></span>
    <a asp-action="Details" asp-route-id="@Model.Id">Details</a>
   @*  <span>
        <a asp-controller="Article" asp-action="Details" asp-route-id="@Model.Id" class="link-primary">Detail</a>
    </span> *@
</div>